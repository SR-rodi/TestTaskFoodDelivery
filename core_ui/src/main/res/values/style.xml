<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Text_title_toolbar">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/sf_pro_display_500</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Text_subtitle_toolbar">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/sf_pro_display_500</item>
        <item name="android:textColor">@color/black_50</item>
    </style>

    <style name="Text_title_category">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/sf_pro_display_500</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Text_title_description_dishe">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/sf_pro_display_500</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Text_title_dishe">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/sf_pro_display_400</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="Widget.App.Button" parent="Widget.Material3.Button">
        <item name="cornerRadius">16dp</item>
        <item name="android:textAppearance">@style/TextAppearance.DogShelter.Button</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="backgroundTint">@color/blue</item>
    </style>

    <style name="TextAppearance.DogShelter.Button" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="Widget.App.Button.Icon" parent="Widget.AppCompat.ImageButton">
        <item name="cornerRadius">16dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="backgroundTint">@color/white</item>
    </style>

</resources>