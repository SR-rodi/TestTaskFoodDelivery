<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.App.Button" parent="Widget.Material3.Button">
        <item name="cornerRadius">16dp</item>
        <item name="android:textAppearance">@style/TextAppearance.DogShelter.Button</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="backgroundTint">@color/blue</item>
    </style>

    <style name="TextAppearance.DogShelter.Button" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="Widget.App.Button.Icon" parent="Widget.AppCompat.ImageButton">
        <item name="cornerRadius">16dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="backgroundTint">@color/white</item>
    </style>
</resources>