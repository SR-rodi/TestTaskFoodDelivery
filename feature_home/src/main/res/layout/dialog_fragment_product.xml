<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/bg_dialog"
        android:orientation="vertical"
        android:padding="16dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="232dp"
            android:backgroundTint="@color/card_background"
            app:cardCornerRadius="10dp">


            <ImageView
                android:id="@+id/product_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:scaleX="0.87"
                android:scaleY="0.87"
                tools:src="@tools:sample/backgrounds/scenic" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_margin="8dp">

                <ImageButton
                    style="@style/Widget.App.Button.Icon"
                    android:layout_width='40dp'
                    android:layout_height="40dp"
                    android:src="@drawable/ic_favorite_button" />

                <ImageButton
                    android:id="@+id/closeButton"
                    style="@style/Widget.App.Button.Icon"
                    android:layout_width='40dp'
                    android:layout_height="40dp"
                    android:src="@drawable/ic_close_button" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/product_name"
            style="@style/Text_title_description_dishe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            tools:text="Рыба с овощами и рисом" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/product_price"
                style="@style/Text_title_description_dishe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:textSize="14sp"
                tools:text="799" />

            <TextView
                style="@style/Text_title_description_dishe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:text="@string/rub"
                android:textSize="14sp" />

            <TextView
                style="@style/Text_title_description_dishe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:text="·"
                android:textSize="14sp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/product_weight"
                style="@style/Text_title_description_dishe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:textColor="@color/black_50"
                android:textSize="14sp"
                tools:text="56г" />

            <TextView
                style="@style/Text_title_description_dishe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:text="@string/g"
                android:textColor="@color/black_50"
                android:textSize="14sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/product_description"
            style="@style/Text_title_description_dishe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:textColor="@color/black_50"
            tools:text="@tools:sample/lorem/random" />

        <TextView
            android:id="@+id/product_message"
            style="@style/Text_title_description_dishe"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:textColor="@color/blue"
            android:text="@string/addMessage" />

        <Button
            android:id="@+id/addButton"
            style="@style/Widget.App.Button"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/addCart" />

    </LinearLayout>


</FrameLayout>