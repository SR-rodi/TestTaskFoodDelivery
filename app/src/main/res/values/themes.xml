<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TestTaskFoodDelivery" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="android:button">@style/AppButton</item>
        <item name="android:navigationBarColor">@color/white</item>
    </style>

    <style name="AppButton" parent="Widget.AppCompat.Button">
        <item name="cornerRadius">25dp</item>
        <item name="android:backgroundTint">@color/black</item>
    </style>

    <style name="Theme.TestTaskFoodDelivery.Stating" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>

        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_round</item>

        <item name="postSplashScreenTheme">@style/Theme.TestTaskFoodDelivery</item>

    </style>



</resources>